<div class="max-w-3xl mx-auto p-4 bg-white shadow-md rounded-lg">
  <header class="text-center py-4">
    <%= image_tag 'logo.png', alt: 'Company Logo', class: "mx-auto h-16" %>
  </header>
  <main class="p-4">
    <h1 class="text-2xl font-bold mb-4">Spending Notification</h1>
    <p class="mb-4">Dear <%= @user.name %>,</p>
    <p class="mb-4">This is a notification for the following spending:</p>
    <ul class="list-disc list-inside mb-4">
      <li class="mb-2">
        <strong>Amount:</strong> <%= number_to_currency(@spending.amount) %>
      </li>
      <li class="mb-2">
        <strong>Description:</strong> <%= @spending.description %>
      </li>
    </ul>
    <p class="mb-4">Thank you for using our service.</p>
  </main>
  <footer class="text-center py-4 border-t">
    <p>&copy; <%= Time.now.year %> CreditBake. All rights reserved.</p>
  </footer>
</div>