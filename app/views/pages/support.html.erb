                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2V10a2 2 0 012-2h2M12 1v4m-4 0a4 4 0 018 0m-4 0v4" />
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold text-gray-900">Our Location</h3>
              <p class="text-gray-700">Las Vegas, NV</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="text-blue-500 w-12 h-12 flex items-center justify-center bg-white shadow-md rounded-full">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m0 0l4-4m-4 4l4 4m2 0h6m-6-6h6" />
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold text-gray-900">How We Can Help?</h3>
              <p class="text-gray-700">At CreditBake, we specialize in improving your credit score by providing personalized strategies and support. Our expert team works diligently to dispute inaccuracies on your credit report, helping you achieve financial freedom and access to better loan options.</p>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-white p-8 shadow-md rounded-lg">
        <h3 class="text-2xl font-bold text-blue-600 mb-6">Send us a Message</h3>
        <%= form_with model: @contact_form, url: contacts_path, method: :post, local: true do |form| %>
          <div class="mb-4">
            <%= form.label :full_name, "Full Name", class: "block text-gray-700 font-semibold mb-2" %>
            <%= form.text_field :full_name, placeholder: "Full Name", class: "w-full p-3 border border-gray-300 rounded-md" %>
          </div>
          <div class="mb-4">
            <%= form.label :email, "Email", class: "block text-gray-700 font-semibold mb-2" %>
            <%= form.email_field :email, placeholder: "Email", class: "w-full p-3 border border-gray-300 rounded-md" %>
          </div>
          <div class="mb-4">
            <%= form.label :phone, "Phone", class: "block text-gray-700 font-semibold mb-2" %>
            <%= form.text_field :phone, placeholder: "Phone", class: "w-full p-3 border border-gray-300 rounded-md" %>
          </div>
          <div class="mb-4">
            <%= form.label :message, "Message", class: "block text-gray-700 font-semibold mb-2" %>
            <%= form.text_area :message, placeholder: "Type your message here", class: "w-full p-3 border border-gray-300 rounded-md h-32" %>
          </div>
          <%= form.submit "Send", class: "w-full bg-blue-600 text-white font-bold py-3 rounded-md hover:bg-blue-700 transition duration-300" %>
        <% end %>
      </div>

    </div>
  </div>
</section>

