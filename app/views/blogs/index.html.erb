<div class="container mx-auto px-4">
  <div class="flex justify-center py-8">
    <h1 class="text-3xl font-semibold">News by topic</h1>
  </div>
  <div class="flex justify-center mb-8">
    <div class="flex space-x-4">
      <%= link_to 'All', blogs_path, class: "px-4 py-2 bg-black text-white rounded-full" %>
      <% Category.all.each do |category| %>
        <%= link_to category.name, blogs_path(category_id: category.id), class: "px-4 py-2 bg-gray-200 rounded-full" %>
      <% end %>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <%= image_tag post.header_image, alt: post.title, class: "w-full h-48 object-cover" %>
        <div class="p-4">
          <h2 class="text-lg font-semibold"><%= link_to post.title, blog_path(post) %></h2>
          <p class="text-gray-500 mt-2"><%= post.created_at.strftime("%B %d, %Y") %></p>
          <p class="text-gray-700 mt-2"><%= truncate(post.body, length: 100) %></p>
          <p class="text-gray-500 mt-2">Categories: <%= post.categories.map(&:name).join(", ") %></p>
          <div class="flex space-x-4 mt-4">
            <%= link_to 'Show', blog_path(post), class: "text-blue-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>