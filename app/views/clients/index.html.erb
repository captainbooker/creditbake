<div class="mx-auto max-w-screen-2xl p-4 md:p-6 2xl:p-10">
  <!-- Loading overlay -->
  <div id="loading-overlay" class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-75 z-50 hidden">
    <div class="text-white text-xl">Processing your request, please wait...</div>
  </div>

  <!-- Main content -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Clients</h1>
    <div>
      <%= link_to 'Create Client', new_client_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
      <button id="invite-link-button" class="bg-green-500 text-white py-2 px-4 rounded hover:bg-green-700">Invite Link</button>
    </div>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="custom-blue md:bg-gray-50 rounded-t-lg shadow-lg">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-white md:text-gray-900 sm:pl-6">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white md:text-gray-900">Status</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white md:text-gray-900">Date Added</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white md:text-gray-900">Action</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @clients.each do |client| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= client.full_name %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Active</td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= client.created_at.strftime("%m/%d/%Y") %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= link_to 'View', dashboard_client_path(client.id), class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
                    <%= link_to 'Delete', client_path(client), method: :delete, data: { confirm: 'Are you sure you want to delete this client?' }, class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700 ml-2" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <%= paginate @clients %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="invite-modal" class="fixed z-10 inset-0 overflow-y-auto hidden">
  <div class="flex items-center justify-center min-h-screen">
    <div class="fixed inset-0 transition-opacity" aria-hidden="true">
      <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>
    <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
            <h3 class="text-xl leading-6 font-medium text-gray-900 font-bold" id="modal-title">Invite Client</h3>
            <div class="mt-2">
              <%= form_with url: send_invite_clients_path, local: true, id: "invite-form" do |form| %>
                <div class="mt-2">
                  <%= form.label :email, "Email Address" %>
                  <%= form.email_field :email, class: "w-full mt-1 p-3 border rounded-lg border-gray-800 text-gray-500", required: true %>
                </div>
                <div class="mt-4">
                  <%= form.submit "Send Invite", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700", id: "send-invite-button" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button id="close-modal-button" class="bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-700">Cancel</button>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener("turbolinks:load", function() {
  const inviteLinkButton = document.getElementById('invite-link-button');
  const inviteModal = document.getElementById('invite-modal');
  const closeModalButton = document.getElementById('close-modal-button');
  const inviteForm = document.getElementById('invite-form');
  const sendInviteButton = document.getElementById('send-invite-button');

  inviteLinkButton.addEventListener('click', function() {
    inviteModal.classList.remove('hidden');
  });

  closeModalButton.addEventListener('click', function() {
    inviteModal.classList.add('hidden');
  });

  inviteForm.addEventListener('submit', function(event) {
    if (!inviteForm.checkValidity()) {
      event.preventDefault();
      inviteForm.reportValidity();
    }
  });

  // Show loading overlay on form submission
  document.querySelectorAll('a[data-show-loading], form[data-show-loading]').forEach(function(element) {
    element.addEventListener('click', function() {
      document.getElementById('loading-overlay').classList.remove('hidden');
    });
    element.addEventListener('submit', function() {
      document.getElementById('loading-overlay').classList.remove('hidden');
    });
  });
});
</script>
